# Singapore Life Planner Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Environment
NODE_ENV=development
PORT=3000
VITE_APP_NAME="Singapore Life Planner"
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:3000

# ============================================
# API KEYS - GOVERNMENT
# ============================================

# Data.gov.sg API
# Get your API key from: https://data.gov.sg/developer
VITE_DATA_GOV_API_KEY=your_data_gov_api_key_here

# LTA DataMall API
# Register at: https://datamall.lta.gov.sg/content/datamall/en/request-for-api.html
VITE_LTA_API_KEY=your_lta_api_key_here

# OneMap API (Singapore Land Authority)
# Register at: https://www.onemap.gov.sg/apidocs/register
VITE_ONEMAP_API_KEY=your_onemap_api_key_here

# SingStat API
# For statistical data: https://www.singstat.gov.sg/api
VITE_SINGSTAT_API_KEY=your_singstat_api_key_here

# ============================================
# API KEYS - FINANCIAL SERVICES
# ============================================

# MAS API (Monetary Authority of Singapore)
# For financial statistics and rates
VITE_MAS_API_KEY=your_mas_api_key_here

# SGX Market Data (Optional)
# For stock market data: https://api.sgx.com
VITE_SGX_API_KEY=your_sgx_api_key_here

# Yahoo Finance API (For international comparison)
VITE_YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here

# Alpha Vantage (For market data)
# Free tier available: https://www.alphavantage.co/support/#api-key
VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Secret for token generation
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# Encryption Key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Singpass Integration (Optional)
# For citizen authentication: https://api.singpass.gov.sg
VITE_SINGPASS_CLIENT_ID=your_singpass_client_id
VITE_SINGPASS_CLIENT_SECRET=your_singpass_client_secret
VITE_SINGPASS_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# DATABASE
# ============================================

# PostgreSQL Connection (Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/sg_life_planner
DIRECT_URL=postgresql://username:password@localhost:5432/sg_life_planner

# Supabase
# Get from: https://app.supabase.io/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================================
# THIRD-PARTY SERVICES
# ============================================

# Google Services
# For maps and location services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# SendGrid (Email Service)
# For sending notifications: https://sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@sglifeplanner.com
SENDGRID_TEMPLATE_WELCOME=d-xxxxxxxxxxxx
SENDGRID_TEMPLATE_MILESTONE=d-xxxxxxxxxxxx

# Twilio (SMS Service - Optional)
# For SMS notifications: https://www.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+6512345678

# Sentry (Error Tracking)
# For monitoring: https://sentry.io
VITE_SENTRY_DSN=https://xxxxx@xxx.ingest.sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org_name
SENTRY_PROJECT=sg-life-planner

# ============================================
# PAYMENT PROCESSING (Optional)
# ============================================

# Stripe (For premium features)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# PayNow Integration (Local payments)
PAYNOW_API_KEY=your_paynow_api_key
PAYNOW_MERCHANT_ID=your_merchant_id

# ============================================
# EXTERNAL DATA SOURCES
# ============================================

# PropertyGuru API (Property prices)
PROPERTY_GURU_API_KEY=your_property_guru_key
PROPERTY_GURU_API_SECRET=your_property_guru_secret

# 99.co API (Property data)
NINETY_NINE_API_KEY=your_99co_api_key

# SGCarMart API (COE and car prices)
SGCARMART_API_KEY=your_sgcarmart_api_key

# Seedly API (Financial data)
SEEDLY_API_KEY=your_seedly_api_key

# MoneySmart API (Financial products)
MONEYSMART_API_KEY=your_moneysmart_api_key

# ============================================
# AI/ML SERVICES (Optional)
# ============================================

# OpenAI API (For recommendations)
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Anthropic Claude API (Alternative AI)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# MONITORING & ANALYTICS
# ============================================

# LogRocket (Session Recording)
VITE_LOGROCKET_APP_ID=your_logrocket_app_id

# Mixpanel (Product Analytics)
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar (Heatmaps & Feedback)
VITE_HOTJAR_ID=your_hotjar_id

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Local Development
VITE_ENABLE_MOCKING=false
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_FEATURE_AI_RECOMMENDATIONS=false
VITE_FEATURE_SOCIAL_SHARING=false
VITE_FEATURE_PREMIUM_PLANS=false
VITE_FEATURE_EXPORT_PDF=true

# ============================================
# DEPLOYMENT & CI/CD
# ============================================

# Vercel (Frontend deployment)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Railway (Backend deployment)
RAILWAY_TOKEN=your_railway_token

# GitHub Actions
GITHUB_TOKEN=your_github_token

# Docker Registry
DOCKER_REGISTRY_URL=docker.io
DOCKER_REGISTRY_USERNAME=your_username
DOCKER_REGISTRY_PASSWORD=your_password

# ============================================
# RATE LIMITING
# ============================================

# API Rate Limits
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# BACKUP & RECOVERY
# ============================================

# S3 Compatible Storage (for backups)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET_NAME=sg-life-planner-backups
S3_REGION=ap-southeast-1

# ============================================
# NOTIFICATIONS
# ============================================

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=mailto:admin@sglifeplanner.com

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=@sglifeplanner

# ============================================
# COMPLIANCE & SECURITY
# ============================================

# PDPA Compliance
DATA_RETENTION_DAYS=365
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
CSP_REPORT_URI=https://sglifeplanner.report-uri.com/r/d/csp/enforce

# ============================================
# TESTING
# ============================================

# Test Environment
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/sg_life_planner_test
TEST_REDIS_URL=redis://localhost:6380

# ============================================
# NOTES
# ============================================

# 1. Never commit this file with actual values to git
# 2. Use strong, unique passwords for all services
# 3. Rotate API keys regularly
# 4. Use different keys for development, staging, and production
# 5. Enable 2FA where possible for service accounts
# 6. Monitor API usage and set up alerts for unusual activity
# 7. Keep this file updated as you add new integrations

# For production deployment:
# - Use a secure key management service (AWS Secrets Manager, Vault, etc.)
# - Enable audit logging for all API access
# - Implement proper CORS policies
# - Use HTTPS everywhere
# - Regular security audits